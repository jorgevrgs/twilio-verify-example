  "license": "ISC",
  "directories": {
    "test": "test"
  },
  "description": "",
  "dependencies": {
    "@fastify/autoload": "5.4.0",
    "@fastify/cors": "8.1.0",
    "@fastify/sensible": "5.1.1",
    "fastify": "4.6.0",
    "fastify-cli": "5.4.2",
    "fastify-plugin": "4.2.1"
  },
  "devDependencies": {
    "@types/node": "18.7.18",
    "concurrently": "7.4.0",
    "cross-env": "7.0.3",
    "fastify-tsconfig": "1.0.1",
    "ts-node": "10.9.1",
    "typescript": "4.8.3"
  }
