{
  "name": "@app/api",
  "version": "1.0.0",
  "main": "app.ts",
  "scripts": {
    "test": "npm run build:ts && tsc -p test/tsconfig.test.json && cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "start": "npm run build:ts && fastify start -l info dist/app.js",
    "build:ts": "tsc",
    "dev": "tsc && concurrently -k -p \"[{name}]\" -n \"TypeScript,App\" -c \"yellow.bold,cyan.bold\" \"tsc -w\" \"fastify start --port=1337 --ignore-watch=.ts$ -w -l info -P dist/app.js\""
  },
  "keywords": [],
